---
import "../styles/global.css";
import Head, { type HeadProps } from "@components/Head.astro";
import Nav from "@components/Nav.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  head: HeadProps;
}

const { head } = Astro.props;
---

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    font-family: var(--primary-font);
    font-size: 1em;
    line-height: 1.5em;
    background-color: var(--main-background);
    color: var(--main-font);
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overflow-x: hidden;
  }

  .content-wrapper {
    flex-grow: 1;
  }

  header {
    margin: 0 auto;
    padding: 0.75em 1em;
    color: var(--nav-font);
    background-color: var(--background-darken);
  }

  .header-wrapper {
    margin: 0 auto;
    max-width: 1100px;
  }

  header :global(h1) :global(small) {
    color: #999;
    font-size: 0.65em;
    padding-inline-start: 0.25em;
  }

  main {
    margin: 0 auto;
    padding: 1em;
  }

  .main-wrapper {
    margin: 0 auto;
    max-width: 1100px;
  }

  @media screen and (max-width: 768px) {
    main {
      padding: 0.75em;
    }
  }
</style>

<html lang="en">
  <head>
    <Head {...head} />
  </head>
  <body>
    <Nav />
    <div class="content-wrapper">
      <header>
        <div class="header-wrapper">
          <slot name="header" />
        </div>
      </header>
      <main>
        <div class="main-wrapper">
          <slot />
        </div>
      </main>
    </div>
    <Footer />
  </body>
</html>
