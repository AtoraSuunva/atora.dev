---
import { Font } from "astro:assets";
import { SITE_DESCRIPTION, SITE_TITLE, SITE_TITLE_TEMPLATE } from "../consts";

interface Props {
  title: string;
  titleTemplate?: string;
  description?: string;
  image?: string;
  keywords?: string[];
  themeColor?: string;
}

export type HeadProps = Props;

const {
  title,
  titleTemplate = SITE_TITLE_TEMPLATE,
  description = SITE_DESCRIPTION,
  image = "/images/feather.png",
  keywords = [],
  themeColor = "#88927B",
} = Astro.props;

const titleTag = titleTemplate.replace(/%s/g, title);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.url);
---

{/* Important meta tags */}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>{titleTag}</title>

{/* Fonts */}
<Font cssVariable="--font-roboto" preload />
<Font cssVariable="--font-source-code-pro" />

<link rel="icon" href="/favicon/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

{/* Canonical URL */}
<link rel="canonical" href={canonicalURL} />

{/* Primary Meta Tags */}
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(", ")} />
<meta name="theme-color" content={themeColor} />

{/* Open Graph / Facebook */}
<meta property="og:type" content="website" />
<meta property="og:locale" content="en_US" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />

{/* Twitter */}
<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />
<meta property="twitter:site" content="@AtoraSuunva" />
<meta property="twitter:creator" content="@AtoraSuunva" />

{/* Favicons */}
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/favicon/apple-touch-icon.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="/favicon/favicon-32x32.png"
/>
<link
  rel="icon"
  type="image/png"
  sizes="16x16"
  href="/favicon/favicon-16x16.png"
/>
<link rel="manifest" href="/favicon/site.webmanifest" />
