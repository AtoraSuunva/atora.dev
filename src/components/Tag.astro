---
interface Props {
  tag: string;
  tagUrl: string;
}

const { tag, tagUrl } = Astro.props;
---

<style>
  .tag {
    display: flex;
    align-items: center;
    background-color: var(--background-darken);
    border: 2px solid var(--tertiary-color);
    border-radius: 100em;
    color: var(--main-font);
    text-decoration: none;
    height: 100%;
    width: 100%;
    margin: 0;
    padding: 0 0.5em;
    transition: all 0.3s ease-in-out;
  }

  .tag:before {
    content: "#";
    background-color: var(--tertiary-color);
    border-radius: 100%;
    margin-right: 0.4em;
    height: 16px;
    width: 16px;
    line-height: 1em;
    text-align: center;
    transition: all 0.3s ease-in-out;
  }

  .tag:hover,
  .tag:focus {
    border-color: var(--active-tertiary-color);
  }

  .tag:hover:before,
  .tag:focus:before {
    background-color: var(--active-tertiary-color);
  }
</style>

<a href={tagUrl} class="tag">{tag}</a>
