{% extends "templates/page.njk" %}
{%- block headerTail -%}
  <div class="post-metadata">
    <div>
      Posted: <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
    </div>
    <div>
      Tags:
      <ul class="post-tags">
        {%- for tag in tags | filterTagList %}
          {%- set tagUrl %}/blog/tagged/{{ tag | slugify }}/
          {% endset %}
          <li>
            <a href="{{ tagUrl }}" class="post-tag">#{{ tag }}</a>
          </li>
        {%- endfor %}
      </ul>
    </div>
  </div>
{%- endblock -%}
{%- block mainAttributes -%}
  class="post-content"
{%- endblock -%}
{%- block main -%}
  {{ content | safe }}
  {%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
      <ul class="links-nextprev">
        {%- if previousPost %}
          <li>
            Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if nextPost %}
          <li>
            Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}
{%- endblock -%}
